<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Removes the AAR files generated by Xamarin -->
  <Target Name="DeleteAndroidArchiveFilesBuild" AfterTargets="PostBuildEvent">
    <Delete Files="$(OutDir)$(AssemblyName).aar" />
  </Target>

  <Target Name="DeleteAndroidArchiveFilesPublish" AfterTargets="Publish">
    <Delete Files="$(OutDir)$(AssemblyName).aar" />
  </Target>
</Project>